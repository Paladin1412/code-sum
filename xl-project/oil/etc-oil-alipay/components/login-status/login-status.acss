/* components/login-status/login-status.acss */

.login-status-container {
    width: auto;
    height: auto;
    position: relative;
}

.login-status-btn {
    width: 100%;
    height: 100%;
    max-width: 100%;
    max-height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    margin: 0;
    padding: 0;
    z-index: 2;
}

.login-status-box {
    position: relative;
    z-index: 1;
}