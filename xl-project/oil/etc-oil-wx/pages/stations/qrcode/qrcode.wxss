/* pages/stations/qrcode/qrcode.wxss */
.qrcode-container{
    width: 100vw;
    height: 100vh;
    background-color: #00A170;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.qrcode-popup{
    position: absolute;
    left: 0;
    top: 0;
}

.qrcode-box{
    width: 90%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    background-color: #00A170;
    border-radius: 10rpx;
}

.qrcode-title-separation{
    width: 100%;
    box-sizing: border-box;
    background-color: white;
    padding: 0 32rpx 24rpx 32rpx;
}

.qrcode-title-separation-content{
    width: 100%;
    height: 2rpx;
    box-sizing: border-box;
    background-color: #f6f6f6;
}

.qrcode-title-container{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 32rpx 0 32rpx 40rpx;
    box-sizing: border-box;
    background-color: white;
    border-radius: 10rpx 10rpx 0 0;
}

.qrcode-title-icon{
    width: 38rpx;
    height: 38rpx;
    margin-right: 16rpx;
}

.qrcode-box-title{
    letter-spacing: 2rpx;
    font-size: 34rpx;
    color: black;
}

.qrcode-canvas-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    position: relative;
    background-color: white;
}

.qrcode-canvas-mask{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    background-color: rgba(255, 255, 255, 0.961);
    border-radius: 10rpx;
    position: absolute;
}

.qrcode-canvas-doing{
    width: 135rpx;
    height: 151rpx;
}

.qrcode-processing{
    margin-top: 40rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
}

.qrcode-canvas{
    margin: 0 0 0 0;
}

.qrcode-refresh-box{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    font-size: 26rpx;
    letter-spacing: 2rpx;
    padding: 20rpx 64rpx 32rpx 64rpx;
    background-color: white;
}

.qrcode-refresh-icon{
    width: 26rpx;
    height: 26rpx;
}

.qrcode-refresh-hint{
    color: #999999;
    margin: 0 8rpx;
}

.qrcode-refresh-text{
    color: #00A170;
}

.qrcode-pay-box{
    width: 100%;
    padding: 20rpx 32rpx;
    background-color: #eff2f9;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    position: relative;
}

.qrcode-pay-image{
    width: 68rpx;
    max-height: 70rpx;
    border-radius: 100%;
}

.qrcode-content-box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.qrcode-pay-title{
    color: #333333;
    font-size: 30rpx;
    margin-left: 16rpx;
}

.qrcode-pay-code{
    color: #999999;
    font-size: 24rpx;
    margin-top: 2rpx;
}

.qrcode-next{
    width: 32rpx;
    height: 32rpx;
}

.qrcode-perfer-box{
    width: 100%;
    padding: 24rpx 32rpx;
    background-color: #05BA7D;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.qrcode-perfer-image{
    width: 42rpx;
    height: 30rpx;
    margin: 0 13rpx;
}

.qrcode-perfer-title{
    color: #ffffff;
    font-size: 28rpx;
    margin-left: 16rpx;
}

.qrcode-hint-continer{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: #9CEBD0;
    font-size: 24rpx;
}

.qrcode-tab{
    width: 94%;
    background-color: #05BA7D;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    border-top-left-radius: 10rpx;
    border-top-right-radius: 10rpx;
    padding-top: 14rpx;
    position: absolute;
    bottom: 0;
    left: 3%;
}

.qrcode-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10rpx 0;
}

.qrcode-separation{
    width: 2rpx;
    height: 50rpx;
    background-color: #9CEBD0;
}

.qrcode-tab-icon{
    width: 50rpx;
    height: 50rpx;
}

.qrcode-tab-text{
    font-size: 22rpx;
    color: #9CEBD0;
    margin-top:6rpx;
}

.qrcode-popup-container{
    width: 100%;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}

.qrcode-popup-box{
    width: 100%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box; 
}

.qrcode-popup-top{
    width: 100%;
    height: 98rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    position: relative;
}

.qrcode-popup-close{
    width: 28rpx;
    height: 28rpx;
    padding: 32rpx;
    align-self: flex-start;
    position: absolute;
    top: 3px;
    left: 0;
}

.qrcode-popup-title{
    font-size: 36rpx;
    color: black;
    letter-spacing: 2rpx;
    font-weight: 500;
}

.qrcode-popup-separation{
    width: 100%;
    height: 2rpx;
    background-color: #f7f7f7;
}

.qrcode-popup-list{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box; 
}

.qrcode-popup-list-item{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box; 
    padding-left: 64rpx;
}

.qrcode-popup-item{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box; 
    padding: 32rpx 0;
    color: #333333;
    font-size: 30rpx;
    letter-spacing: 2rpx;
    padding-right: 32rpx;
}

.qrcode-popup-item-separation{
    width: 100%;
    height: 2rpx;
    background-color: #f7f7f7;
}

.qrcode-item-right{
    width: 32rpx;
}

.qrcode-no-open-box{
    width: 90%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    background-color: #ffffff;
    border-radius: 10rpx;
}

.qrcode-no-title{
    font-size: 40rpx;
    color: black;
    margin: 40rpx 0 20rpx 0;
}

.qrcode-no-hint{
    font-size: 28rpx;
    color: #888888;
    margin-bottom: 20rpx;
}

.qrcode-no-image{
    width: 607rpx;
    height: 669rpx;
}

.qrcode-no-box{
    width: 90%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    box-sizing: border-box;
    background-color: #f8f8f8;
    border-radius: 12rpx;
    margin: 40rpx 0 0 0;
    padding: 24rpx 0;
}

.qrcode-no-box-item{
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
}

.qrcode-no-box-item-image{
    width: 80rpx;
    height: 60rpx;
}

.qrcode-no-box-item-text{
    font-size: 28rpx;
    color: #888888;
    margin-top: 12rpx;
}

.qrcode-no-open-btn{
    width: 360rpx;
    height: 72rpx;
    line-height: 72rpx;
    color: #08CC8A;
    text-align: center;
    border-radius: 10rpx;
    border: 2rpx solid #05BA7D;
    letter-spacing: 2rpx;
    margin: 40rpx 0 60rpx 0;
}