/* pages/stations/clean/clean-order/clean-order.wxss */
@import "../../../../templates/clean/ticket-card/ticket-card.wxss";
.clean-order-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.clean-order-details-title-box{
    padding: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
}
.clean-order-details-icon{
    width: 48rpx;
    height: 48rpx;
    /*background-color: #1890ff;*/
    border-radius: 100%;
}
.clean-order-details-title{
   margin-left: 12rpx;
    color: rgba(0, 0, 0, 0.85);
    font-size: 20rpx 32rpx;
    text-align: left;
    font-family: PingFangSC-Medium;

}
.clean-order-details-box{
    width: 710rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    z-index: 100;
    margin: 0rpx 20rpx;
    padding: 10rpx 0;
    background-color: #ffffff;
    border-radius: 12rpx;
    box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
}
.clean-order-info-items{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
}
.clean-order-info-hint-text{
    left: 50rpx;
    height: 37rpx;
    color: rgba(0, 0, 0, 0.45);
    font-size: 26rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    margin: 15rpx 30rpx;
}
.clean-order-info-data-text{
    height: 37rpx;
    color: rgba(0, 0, 0, 0.85);
    font-size: 26rpx;
    text-align: right;
    font-family: PingFangSC-Medium;
    margin: 15rpx 30rpx;
}
.clean-order-coupons-select-left{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 110rpx;
}
.clean-order-coupons-select-right{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    height: 110rpx;
}
.clean-order-coupons-select-icon{
    width: 42rpx;
    height: 42rpx;
    /*background-color: rgba(5, 186, 125, 1);*/
    margin: 20rpx;
}
.clean-order-coupons-select-text{
    color: rgba(0, 0, 0, 0.85);
    font-size: 30rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
}
.clean-order-coupons-select-sub-text{
    color: rgba(0, 0, 0, 0.45);
    font-size: 26rpx;
    text-align: right;
    font-family: PingFangSC-Regular;
    margin-right: 30rpx;
}
/*洗车抵用券*/
.clean-order-vouchers-box{
    width: 710rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    z-index: 100;
    margin: 30rpx 20rpx 200rpx 20rpx;
    padding: 10rpx 30rpx;
    background-color: #ffffff;
    border-radius: 12rpx;
    box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.05);
}
.clean-order-vouchers-view{
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: flex-end;
    align-items: center;
    margin-top: 20rpx;
}
.clean-order-usable-text{
    display: flex;
    flex-direction: row;
    width: 110rpx;
    height: 40rpx;
    justify-content: center;
    align-items: center;
    border-radius: 4rpx;
    background-color: rgba(5, 127, 255, 0.05);
    border: 2rpx solid rgba(22, 136, 255, 0.25);
    color: rgba(5, 127, 255, 1);
    font-size: 24rpx;
    text-align: left;
    font-family: PingFangSC-Regular;
    margin-right: 8rpx;
}
.clean-order-vouchers-text{
    color: rgba(0, 0, 0, 0.85);
    font-size: 26rpx;
    text-align: right;
    font-family: PingFangSC-Regular;
    /*width: 100%;*/
}
.clean-order-vouchers-new-user{
    display: flex;
    flex-direction: column;
    width: 100%;
}
.clean-order-vouchers-user-card{
    width: 584rpx;
    height: 166rpx;
    border-radius: 16rpx;
    background: linear-gradient(to left, rgb(33, 34, 35) , rgb(47, 48, 49));
}

/*确认支付*/
.clean-order-confirm-box{
    width: 750rpx;
    padding: 30rpx 32rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0rpx -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.04);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    position: fixed;
    bottom: 0px;
    z-index: 200;

}
.clean-order-confirm-hint{
    width: 112rpx;
    color: rgba(0, 0, 0, 0.85);
    font-size: 28rpx;
}
.clean-order-confirm-money-box{
    flex: 1;
    max-height: 52rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
}
.clean-order-confirm-mark{
    color: rgba(5, 186, 125, 1);
    font-size: 24rpx;
    align-self: flex-end;
    padding-bottom: 4rpx;
}
.clean-order-confirm-money{
    color: rgba(5, 186, 125, 1);
    font-size: 40rpx;
    font-weight: 500;
}
.clean-order-confirm-button{
    width: 320rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 32rpx;
}

/*优惠券*/
.fast-order-preferent-container{
    width: 100%;
    height: 870rpx;
    background-color: #f8f8f8;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}
.fast-order-preferent-header{
    width: 100%;
    height: 140rpx;
    padding: 0 32rpx;
    background-color: white;
    border-top-left-radius: 32rpx;
    border-top-right-radius: 32rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
}
.fast-order-preferent-header-text{
    font-size: 36rpx;
    color: rgba(0, 0, 0, .85);
    font-weight: 500;
}
.fast-order-preferent-header-image{
    width: 32rpx;
    height: 32rpx;
}
.fast-order-preferent-list{
    width: 100%;
    height: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 20rpx;
    background-color: #f8f8f8;
    box-sizing: border-box;
}