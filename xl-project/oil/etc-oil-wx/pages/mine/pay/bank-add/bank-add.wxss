/* pages/person/payment/bank-add/bank-add.wxss */
@import "../../../../templates/mine/bind-bank/bind-bank.wxss";
.bank-card-add-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.bank-card-add-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}
.bank-card-add-title{
    width: 90%;
    font-size: 32rpx;
    padding: 24rpx 48rpx;
    color: rgba(0, 0, 0, 0.45);
    text-align: left;
    font-family: PingFang-SC-Medium;
}
.etc-list-container-footer{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    z-index: 100;
    background-color: #FFFFFF;
    height: 196rpx;
    box-shadow: 0rpx -4rpx 20rpx 0rpx rgba(0, 0, 0, 0.04);
}
.etc-list-container-footer-text{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 26rpx;
    margin: 24rpx 0;
    color: rgba(0, 0, 0, 0.45);
    text-align: left;
    font-family: PingFang-SC-Medium;
}
.etc-list-container-footer-icon{
    width: 28rpx;
    height: 28rpx;
    margin-right: 12rpx;
}
.etc-list-container-footer-btns{
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.etc-list-container-footer-btn-item{
    width: 630rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 56rpx;
    color: #ffffff;
    font-size: 32rpx;
    position: relative;
}
.over-button{
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}