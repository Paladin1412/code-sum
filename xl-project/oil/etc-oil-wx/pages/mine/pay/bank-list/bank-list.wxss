/* pages/person/payment/bank-list/bank-list.wxss */
@import "../../../../templates/mine/bank-card/bank-card.wxss";
page{
    background-color: #F8F8F8;
    width: 100%;
    height: auto;
}
.bank-card-list-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}
.bank-card-list-cell{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}
.bank-card-add{
    /*background-color: #1C1A24;*/
    position: fixed;
    flex: 1;
    bottom: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 680rpx;
    height: 88rpx;
    border-radius: 8rpx;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.06);
    z-index: 500;
}
.bank-card-add-img{
    margin: 10rpx;
    /*width: 48rpx;*/
    /*height: 48rpx;*/
    width: 38rpx;
    height: 38rpx;
}
.bank-card-add-text{
    /*font-size: 14px;*/
    /*color: #cbc9d2;*/
    color: rgba(153, 153, 153, 1);
    font-size: 32rpx;
    text-align: left;
    font-family: PingFang-SC-Medium;

}
.no-card-text{
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #BBBBBB;
}
.no-card-image{
    width: 292rpx;
    height: 292rpx;
}
.card-bottom-blank{
    height: 100px;
    width: 100%;
    background-color: transparent;
}
.result-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding: 300rpx 0;
}
.bank-card-click-box{
    width: 100vw;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
}
.bank-card-click-item{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 28rpx 0;
}
.bank-card-click-line1{
    width: 100%;
    height: 2rpx;
    background-color: #f5f5f5;
}
.bank-card-click-line1{
    width: 100%;
    height: 2rpx;
    background-color: #E6E6E6;
}
.bank-card-click-line2{
    width: 100%;
    height: 12rpx;
    background-color: rgba(205, 205, 209, 1);

}
.click-text1{
    color: rgba(136, 136, 136, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: PingFangSC-Regular;
}
.click-text2{
    color: rgba(230, 67, 64, 1);
    font-size: 36rpx;
    text-align: center;
    font-family: PingFangSC-Regular;

}
.click-text3{

    background-color: rgba(255, 255, 255, 1);

}
