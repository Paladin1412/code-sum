.qrcode-result-container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.qrcode-result-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.qrcode-result-box-top{
    width: 100%;
    height: 500rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.qrcode-result-box-image{
    width: 250rpx;
    height: 206rpx;
}

.qrcode-result-box-hint{
    color: rgba(94, 94, 94, 1);
    font-size: 42rpx;
    margin-top: 32rpx;
}

.qrcode-result-box-retry-pay{
    width: 630rpx;
    height: 90rpx;
    color: rgba(255, 255, 255, 1);
    font-size: 36rpx;
    margin-top: 40rpx;
}

.qrcode-result-box-invoice{
    width: 630rpx;
    height: 90rpx;
    color: rgba(102, 102, 102, 1);
    font-size: 36rpx;
    margin-top: 32rpx;
}