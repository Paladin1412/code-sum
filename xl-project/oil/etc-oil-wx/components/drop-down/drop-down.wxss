/* components/drop-down/drop-down.wxss */
.drop-down-container{
    width: 100%;
    height: 100%;
    position: relative;
}

.drop-down-menu-box{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    box-sizing: border-box;
    background-color: #ffffff;
}

.drop-down-menu{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
}

.drop-down-list{
    width: 100vw;
    position: fixed;
    background-color: rgba(0, 0, 0, .4);
    z-index: 1000;
    bottom: 0;
    left: 0;
}

.drop-down-list-item{
    width: 100%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 40rpx;
    background-color: white;
    border-bottom: 2rpx solid #f8f8f8;
}

.drop-down-list-item-image{
    width: 32rpx;
    height: 32rpx;
    
}