/* components/login-status/login-status.wxss */

.login-status-container{
    width: auto;
    height: auto;
}

.login-status-btn{
    width: 100%;
    height: 100%;
    max-width: 100%;
    max-height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    margin: 0;
    padding: 0;
    z-index: 2;
}

.login-status-box{
    position: relative;
    z-index: 1;
}

.login-button-box{
    width: 750rpx;
    padding: 36rpx 0;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background-color: white;
    z-index: 8000;
}

.login-button{
    width: 100rpx;
