.f20 {
	font-size: .44rem;
}
.c2b {
	color: #2b2b2b;
}
body {
    background: #fff;
}
.wrap header {
	background-color: #fff; 
}
.wrap .header-item {
	background: url(../images/common/border-icon.png) left bottom 1px repeat-x;
}
.header-back {
	background: url(../images/police-headline/btn-blog-back.png) center center / .36rem .67rem no-repeat;
}
.title-pic {
	display: inline-block;
	vertical-align: top;
	width: 76%;
	font-size: 0;
	text-align: center;
}
.title-pic i {
	display: inline-block;
	margin-top: .32rem;
	vertical-align: top;
}
.title-pic .title {
	margin-left: .44rem;
    font-size: .88rem;
	line-height: 1.46rem;
}
/*=警微热点样式 start=*/
.content {
	position: absolute;
	width: 100%;
}
.blog-news-content,
.blog-news-item {
	width: 100%;
}
.item-content {
	padding: .38rem 4.2% 0.56rem;
	width: 91.6%;
	/*background: url(../images/common/border-icon.png) left bottom 1px repeat-x;*/
}
#blogNews {
	background: #f5f5f5;
}
.blog-news-item {
	background: #fff;
	/* margin-bottom: .44rem; */
}

.img-list {
	flex-wrap: wrap; /* 自动换行*/
	margin-top: 0.56rem;
}
/*一行展示一个图片*/
.img-item-one {
    width: 9.84rem;
    height: 7.42rem;
}
.img-list .img-item-one img {
    display: block;
    width: auto;
    max-width: 14.67rem;
    min-width: 4.2rem;
    height: 7.42rem;
}
/*一行展示2张图片*/
/* .img-item-two {
    width: 4.8rem;
    height: 3.6rem;
} */
/*一行展示3张图片*/
.img-item-two,
.img-item-three {
    width: calc(33% - .14rem);
    height: 4.8rem;
}
.img-item-two-mar {
    margin-left: .21rem;
    margin-right: calc(34% - .14rem);
}
.img-item-mar {
    margin-left: .21rem;
}
.img-item-two img,
.img-item-three img {
    display: block;
    width: 100%;
    height: 100%;
}
.img-item-btom {
    margin-bottom: .21rem;
}

/* 视频 */
.vedio-unit {
    position: relative;
    margin-top: .44rem;
    width: 100%;
    height: 9.56rem;   
}
.vedio-unit span {
    position: absolute;
    width: 100%;
    height: 100%;
    background: url(../images/police-headline/icon-play.png) center center / 1.78rem no-repeat;
}
.vedio-unit img {
    display: block;
    width: 100%;
    height: 100%;
}

i {
	border: none;
}
.top-7 {
	top: 3rem !important;
}
/*=警微热点样式 end=*/


.hide {
    display: none;
}
.over {
    overflow: hidden;
}
/*内容部分*/
.download-wrap {
    position: relative;
    width: 100%;
    height: 100%;
    background: url(../images/share/bg.png) no-repeat;
    background-size: 100% 100%;
}
.download-bg {
    position: relative;
    z-index:0;
    height: 100%;
}
.download-img {
    margin-left: 10%;
    position: absolute;
    top: 1.4rem;
    z-index:0;
    display: block;
    width: 80%;
    max-height: calc(100% - 1.25rem);
}
.download-cont {
    position: absolute;
    right: 0;
    top: 0;
    left: 0;
    z-index: 19;
    height: 3.0rem;
    background: rgba(0,0,0,0.5);
}
.content-download-logo {
    margin-top: 0.5rem;
    margin-left: 6.7%;
    display: block;
    width: 2rem;
    height: 2rem;
}
.content-download-word {
    margin-top: 0.7rem;
    margin-left: 0.3rem;
}
.content-download-title {
    font-size: 0.75rem;
    color: #ffffff;
    line-height: 0.8rem;
}
.content-download-text {
    font-size: 0.53rem;
    color: #ffffff;
    line-height: 1rem;
}
.content-download-button {
    margin-top: 0.82rem;
    margin-right: 4%;
    width: 4rem;
    height: 1.36rem;
    background-color: #8ad014;
    border-radius: .22rem;
    font-size: 0.66rem;
    color: #ffffff;
    text-align: center;
    line-height: 1.36rem;
}
.share-mask {
    position: absolute;
    top: 0%;
    left: 0%;
    width: 100%;
    height: 100%;
    background-color: #4c4c4c;
    -moz-opacity: 0.8;
    opacity: .7;
    z-index: 1001;
    filter: alpha(opacity=40);
}
.share-mask img {
    padding-left: 25%;
    width: 70%;
}


.empty p {
    padding-top: 0.68rem;
    font-size: 0.62rem;
    color: #666;
    text-align: center;
    line-height: 0.68rem;
}

.empty-ad {
    height: 10rem;
    background: url(../images/common/404.png) no-repeat 50% bottom;
    background-size: 4.1rem 4.04rem;
}


.empty .refresh-btn {
    margin: 1.64rem auto 0.70rem;
    width: 7.1rem;
    height: 1.78rem;
    background-color: #4c72ff;
    border: 1px solid #4c72ff;
    border-radius: 10px;
    text-align: center;
    line-height: 1.78rem;
    font-size: 0.66rem;
    color: #fff;
}

.empty .close-btn {
    margin: 0 auto;
    width: 7.1rem;
    height: 1.78rem;
    background-color: #fff;
    border: 1px solid #d8d8d8;
    border-radius: 10px;
    line-height: 1.78rem;
    font-size: 0.66rem;
    color: #666;
    text-align: center;
}
.wrap header {
    padding-top: 0 !important;
}