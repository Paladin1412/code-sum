body {
	background-color: #fff;
}
.content {
	position: absolute;
	width: 100%;
	height: calc(100% - 3.0rem);
}
.wrapper {
	padding: 0.78rem 11.8% 0;
	height: calc(100% - 0.78rem);
}
.wrapper ul {
	font-size: 0;
}
.wrapper li {
	display: inline-block;
	width: 50%;
}
.wrapper a {
	display: inline-block;
	margin-top: 1.28rem;
	width: 5.04rem;
	height: 1.82rem;
	background: #3fa2fb;
	box-shadow: 0px 0px 0.67rem #3fa2fb; /*30px*/
	border-radius: 1.12rem;
	font-size: 0.8rem;
	color: #fff;
	text-align: center;
	line-height: 1.82rem;
}