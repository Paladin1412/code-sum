/* ========公共缴费========  */
body{
	background-color: #f2f2f2;
}
.home-content{
	position: absolute;
    top: 3.4rem;
    width: 100%;
    z-index: 1;
}
.home-scan,
.home-idCode {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0.48rem 0 0 4.2%;
	width: 91.6%;
	height: 8.0rem;
	background-color: #fff;
    border-radius: 0.088889rem;
	font-size: 0.71rem;
    color: #333;	
}
.home-scan a,
.home-idCode a {
	width: 100%;
    height: 3.27rem;
	margin: 1.6rem 0 0.8rem 0;
}
.home-scan a {
	background: #fff url(../images/pay/icon-scan.png) no-repeat center / 3.69rem 3.27rem;
}
.home-idCode a {
	background: #fff url(../images/pay/icon-input.png) no-repeat center / 3.64rem 2.91rem;
}

.mark {
    position:absolute;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .3);
    display: none;
    z-index: 10;
}

.quit {
    position: absolute;
    top: 30%;
    left: 10%;
    width: 80%;
    height: 6rem;
    background: #fff;
    border-radius: .22rem;
    font-size: .67rem;
}

.quit p {
    height: 4.2rem;
    border-bottom: 1px solid #ccc;
    text-align: center;
    line-height: 4.2rem;
}

.quit div {
    display: flex;
    height: 1.8rem;
    line-height: 1.8rem; 
}
.quit div span {
    flex: 1;
    text-align: center;
}
.quit div span:nth-child(1) {
    border-right: 1px solid #ccc;
}