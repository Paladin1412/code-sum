/**
 * @author hmxue
 * @time 2017-11-13
 * @description 资讯详情页模板样式
 */
.wrap {
    /*margin-bottom: 2rem;*/
    width: 100%;
    height: 100%;
    background: #fff;
    /*position: absolute;*/
}

/* ================ 头部分享和收藏样式start =====================*/
header {
    /*position: absolute;*/
    top: 0;
}

.news-top-bg {
    background: #fff;
    color: #8e8e8e !important;
    border-bottom: 1px solid #eaeaea;
}

.share-collection {
    position: absolute;
    display: inline-block;
    top: 0.6rem;
    right: 0.88rem;
    width: 0.2rem;
    height: 0.8rem;
    background: url('../images/news-detail/more.png') no-repeat;
    background-size: 0.2rem 0.8rem;
}
.share-bomb-mask {
    position: absolute;
    overflow: auto;
    top: 2.1rem;
    bottom: 0;
    width: 100%;
    height: calc(100% - 2.1rem);
    background: rgba(0,0,0,0.4);
}
.share-bomb {
    position: absolute;
    right: 0.45rem;
    width: 4.73rem;
    height: 4.22rem;
    background: url('../images/news-detail/more.png') no-repeat;
    background-size: 4.73rem 4.22rem;
    text-align: center;
}
.share-bomb span {
    display: block;
    width: 100%;
    height: 2.12rem;
    font-size: 0.62rem;
    color: #333;
    line-height: 2.12rem;
    text-indent: 1rem;
}
.share-btn {
    margin: 0 0 0 2.5%;
    display: inline-block;
    width: 12.5%;
    height: 2.1rem;
    background: url(../images/news-detail/share2.png) 10% center no-repeat;
    background-size: 0.68rem 0.73rem;
}
.collection-btn {
    display: inline-block;
    width: 13%;
    height: 2.1rem;
    background: url(../images/news-detail/collection.png) center center no-repeat;
    background-size: 0.75rem 0.71rem;
}

.header-item .title-text {
    width: auto;
    text-align: left;
    text-indent: 0;
    color: #000 !important;
    line-height: 2.1rem;
    padding-top: 0.1rem;
}

.news-header-back {
    display: inline-block;
    width: 12%;
    height: 2.1rem;
    background: url(../images/news-detail/back-icon2.png) center center no-repeat;
    background-size: 0.37rem 0.67rem;
}

.zx-zan {
    width: 12% !important;
    text-align: right !important;
    background: url(../images/news-detail/icon_zan.png) 10% 50% / 0.75rem 0.71rem no-repeat;
    font-size: 0.533333rem !important;
    padding-right: 3%;
}
/* ================ 头部分享和收藏样式 end =====================*/

/* ================ 资讯样式 end =====================*/

.news-view {
    position: absolute;
    top: 2.7rem;
    width: 100%;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    background: #F6F6F6;
    /*position: absolute;
    overflow: auto;*/
}
.pullDown {
    display: none;
    height: 0;
}
.news-main {
    padding: 0.5rem 0;
    background-color: #fff;
}
.news-title {
    padding: 0 4%;
    font-size: 0.9rem;
    line-height: 1.2rem;
    color: #333;
    text-align: justify;
}
.news-item {
    padding: 0 4%;
    font-size: 0.58rem;
    line-height: 1.5rem;
    text-align: justify;
    color: #666;
}
.news-item-source {
    float: left;
    padding-right: 0.8rem;
    color: #666;
    max-width: 56%;
}
.news-item-time {
    float: left;
}
.news-content,.video-content {
    padding: 0 4%;
}
.news-content,
.news-content p,
.news-content span,
.news-content li,
.news-content ul,
.news-content i,
.news-content ol,
.news-content dd,
.news-content dt,
.news-content em,
.news-content a ,
.news-content td,
.news-content strong {
    font-size: 0.74rem !important;
    line-height: 1rem !important;
    text-align: justify;
    color: #333;
}
.news-content img {
    display: block;
    margin: 0.4rem auto;
    width: 100%;
}
.news-more {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 2rem;
    background-color: #f5f5f5;
    font-size: 0.7rem;
    text-align: center;
    line-height: 2rem;
    color: #666;
}
.like {
    padding: .44rem 0 .8rem 0;
    text-align: center;
    background-color: #fff;
}
.like img {
    width: 3.48rem;
    height: 3.48rem;
}
.like p {
    text-align: center;
    font-size: .53rem;
    /*  line-height: 2.22rem;*/
    color: #666;
}
.judge-area h1 {
    padding: 0 .56rem;
    font-size: .58rem;
    color: #808080;
    line-height: 1.7rem;
}
.judge-area h1 span {
    margin-left: .44rem;
}
.user-judge li {
    padding: .67rem .56rem;
    border-bottom: 1px solid #EEE;
    background-color: #fff;
}
.user-wrap {
    position: relative;
}
.user-wrap .head-icon {
    width: 1.78rem;
    height: 1.78rem;
    border-radius: 50%;
}
.praise {
    position: absolute;
    top: 0;
    right: 0;
}
.praise img {
    width: .67rem;
}
.praise span {
    display: inline-block;
    font-size: .53rem;
    vertical-align: middle;
}
.not-pass {
    position: absolute;
    top: .2rem;
    right: 0;
    font-size: .62rem;
    color: #666;
}
.judge-info {
    margin-left: .33rem;
    width: 11.8rem;
}
.user-name, .judge-time {
    margin-bottom: .2rem;
    font-size: .53rem;
    color: #999;
}
.judge-content,
.all-article,
.judge-content span {
    font-size: .62rem;
    color: #333;
    line-height: 1rem;
}
.judge-content {
    position: relative;
}
.all-article {
    margin: .3rem 0;
    color: #ff833a;
    text-align: right;
}
.response-area {
    padding: .56rem;
    background-color: #F6F6F6;
}
.response-area .judge-info {
    width: 11rem;
}
.response-area .user-wrap {
    margin-top: 1rem;
}
.response-area .user-wrap:first-child {
    margin-top: 0;
}
.see-more {
    padding: .3rem 0 .89rem 0;
    background-color: #F6F6F6;
    font-size: .53rem;
    color: #999;
    text-align: center;
}
.news-video {
    width: 100%;
    height: 250px;
}
.notice-wrap {
    /* height: 100%;*/
    position: absolute;
    top: 2.1rem;
    bottom: 0;
    overflow: auto;
    width: 100%;
    background: #fff;
}
.notice-wrap .news-content a {
    color: #0000FF;
}

.jump-url {
    padding-bottom: .5rem;
    display: block;
    font-size: .67rem;
    text-decoration: underline;
}
.video-content audio {
    margin: .5rem 0;
    width: 100%;
    height: 2rem;
}
.video-content iframe {
    width: 100%;
    height: 550px;
}
.audio-name {
    margin-bottom: .5rem;
    color: #3FC1AE;
    font-size: .62rem;
    text-indent: .5rem;
}
.full-bg {
    position: absolute;
    z-index: 111;
    width: 100%;
    height: 100%;
    background-color: #101018;
    opacity: .5;
    filter: progid:DXImageTransform.Microsoft.Alph;
}
/* ================ 资讯样式 end =====================*/


.empty p {
    padding-top: 0.68rem;
    font-size: 0.62rem;
    color: #666;
    text-align: center;
    line-height: 0.68rem;
}

.empty-ad {
    height: 10rem;
    background: url(../images/common/404.png) no-repeat 50% bottom;
    background-size: 4.1rem 4.04rem;
}


.empty .refresh-btn {
    margin: 1.64rem auto 0.70rem;
    width: 7.1rem;
    height: 1.78rem;
    background-color: #4c72ff;
    border: 1px solid #4c72ff;
    border-radius: 10px;
    text-align: center;
    line-height: 1.78rem;
    font-size: 0.66rem;
    color: #fff;
}

.empty .close-btn {
    margin: 0 auto;
    width: 7.1rem;
    height: 1.78rem;
    background-color: #fff;
    border: 1px solid #d8d8d8;
    border-radius: 10px;
    line-height: 1.78rem;
    font-size: 0.66rem;
    color: #666;
    text-align: center;
}
